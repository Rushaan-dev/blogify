<div class="container">
  <div class="row">
    <% blogs.forEach(blog => { %>
      <div class="col-md-4 d-flex align-items-stretch mb-3">
        <div class="card shadow-sm h-100">

          <!-- Blog Image (smaller height) -->
          <img src="/blogpics/<%= blog.blogimage %>" 
               class="card-img-top" 
               style="width: 100%; height: 120px; object-fit: cover;" 
               alt="Blog Image">

          <div class="card-body d-flex flex-column p-3">

            <!-- Blog Title -->
            <h6 class="card-title mb-1 text-truncate"><%= blog.title %></h6>

            <!-- Author Name -->
            <p class="text-muted mb-2 d-flex align-items-center" style="font-size: 0.85rem;">
              <i class="bi bi-person me-1"></i> Posted By: <%= blog.createdby.fullname %>
            </p>

            <!-- Blog Snippet -->
            <p class="card-text text-muted small text-truncate" style="max-height: 3.5em; overflow: hidden;">
              <%= blog.content %>
            </p>

            <!-- Button -->
            <a href="/blog/<%= blog._id %>" class="btn btn-sm btn-outline-primary mt-auto">Read More</a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>
